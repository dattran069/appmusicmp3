<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".SingerActivity.SingerActivity"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linear_singer_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.google.android.material.appbar.AppBarLayout
        android:background="@color/white"
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/img_singer_back"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholderimg_large" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_singer_avar"
                android:padding="4dp"
                android:background="@drawable/circle_white"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/placeholderprofile"></de.hdodenhof.circleimageview.CircleImageView>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rcv_category_nghesi"></androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/botron_primary"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="Thông tin"
            ></TextView>
        <TextView
            android:id="@+id/txt_thongtin"
            android:textColor="@color/text_color_black_backgroung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            ></TextView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_thongtin_singer">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/text_color_black_backgroung"
                android:layout_width="100dp"
                android:text="Tên thật"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txt_singer_name_singerPage"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:text="Trần Quốc Đạt"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/text_color_black_backgroung"
                android:layout_width="100dp"
                android:text="Ngày sinh"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txt_singer_birthday_singerPage"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:text="06/09/2001"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/text_color_black_backgroung"
                android:layout_width="100dp"
                android:text="Quốc gia"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txt_singer_country_singerPage"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:text="Việt Nam"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/text_color_black_backgroung"
                android:layout_width="100dp"
                android:text="Thể loại"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txt_singer_style_singerPage"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:text="Thể loại"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>